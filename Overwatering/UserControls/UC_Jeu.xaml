<UserControl x:Class="Overwatering.UC_Jeu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             Height="450" Width="800"
             Focusable="True"
             Loaded="UC_Jeu_Loaded"
             KeyDown="UC_Jeu_KeyDown"
             KeyUp="UC_Jeu_KeyUp"
             PreviewKeyDown="UC_Jeu_PreviewKeyDown">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/Assets/ImagesMenu/JeuBackground.png" Stretch="UniformToFill"/>
        </Grid.Background>

        <Grid Grid.Row="0">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="10, 10, 0, 420">
                <TextBlock Text="" FontSize="18" FontWeight="Bold" RenderTransformOrigin="0.5,0.5" Width="51" Height="22">
                    <TextBlock.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform ScaleX="-1"/>
                            <SkewTransform/>
                            <RotateTransform/>
                            <TranslateTransform/>
                        </TransformGroup>
                    </TextBlock.RenderTransform>
                    <TextBlock.Background>
                        <ImageBrush ImageSource="/Assets/ImagesJeu/ImagesShop/coin.png"/>
                    </TextBlock.Background>
                </TextBlock>
                <TextBlock x:Name="TxtSoldePieces" Text="10" FontSize="18" FontWeight="Bold" Foreground="#FFD700"/>
            </StackPanel>

        </Grid>

        <Rectangle x:Name="ColisionPuit" Canvas.Left="480" Canvas.Top="380" Fill="#88FF0000" IsHitTestVisible="False" Margin="636,276,101,114"/>    
        <Rectangle x:Name="ColisionArbreGauche" Canvas.Left="480" Canvas.Top="380" Fill="#88FF0000" IsHitTestVisible="False" Margin="23,50,650,47"/>
        <Rectangle x:Name="ColisionArbreDroit" Canvas.Left="480" Canvas.Top="380" Fill="#88FF0000" IsHitTestVisible="False" Margin="752,10,0,47"/>
        <Rectangle x:Name="ColisionArbreHautGauche" Canvas.Left="480" Canvas.Top="380" Fill="#88FF0000" IsHitTestVisible="False" Margin="150,0,456,375"/>
        <Rectangle x:Name="ColisionArbreHautDroit" Canvas.Left="480" Canvas.Top="380" Fill="#88FF0000" IsHitTestVisible="False" Margin="556,0,48,408"/>
        <Rectangle x:Name="ColisionArbreBas" Canvas.Left="480" Canvas.Top="380" Fill="#88FF0000" IsHitTestVisible="False" Margin="150,403,48,0"/>
        <Canvas x:Name="Canvas" Grid.RowSpan="2" Background="Transparent">
            <Image x:Name="ImgJoueur"
                   Width="64" Height="64"  
                   RenderOptions.BitmapScalingMode="NearestNeighbor"
                   Canvas.Left="470"       Canvas.Top="230"/>

            <Image x:Name="ImgClient"
                   Source="/Assets/ImagesJeu/persoClient.png"
                   Width="64" Height="64"
                   RenderOptions.BitmapScalingMode="NearestNeighbor"
                   Canvas.Left="400" Canvas.Top="30"
                   Visibility="Collapsed"/>
            <Border x:Name="BulleCommande"
                    Canvas.Left="470" Canvas.Top="30"
                    Background="White" BorderBrush="Black" BorderThickness="1"
                    CornerRadius="5" Padding="5"
                    Visibility="Collapsed">
                <StackPanel>
                    <TextBlock x:Name="TxtCommande" Text="Commande: " FontWeight="Bold"/>
                    <TextBlock x:Name="TxtFleurDemandee" Text="Fleur: "/>
                </StackPanel>
            </Border>

        </Canvas>

        <Canvas x:Name="CanvasJeu" Background="Transparent">
            <Image x:Name="ImgPerso"
                   Width="50" Height="60"  
                   Canvas.Left="475" Canvas.Top="200"
                   RenderOptions.BitmapScalingMode="NearestNeighbor"/>
            <Image Height="30" Canvas.Left="601" Source="/Assets/ImagesJeu/ImagesShop/daisyseed.png" Stretch="Fill" Canvas.Top="126" Width="30" HorizontalAlignment="Left" VerticalAlignment="Top"/>
            <Image Height="30" Canvas.Left="597" Source="/Assets/ImagesJeu/ImagesShop/roseseed.png" Stretch="Fill" Canvas.Top="170" Width="38" HorizontalAlignment="Center" VerticalAlignment="Top"/>
            <Image Height="30" Canvas.Left="597" Source="/Assets/ImagesJeu/ImagesShop/sunflowerseed.png" Stretch="Fill" Canvas.Top="215" Width="32" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        </Canvas>

        <Button x:Name="butPause" Content="⏸️"
                HorizontalAlignment="Right" VerticalAlignment="Top"
                Width="50" Height="50" Margin="0,10,10,0"
                Background="Transparent" BorderThickness="0" FontSize="25"
                Click="ButPause_Click" Cursor="Hand"/>

        <Grid x:Name="MenuPauseOverlay" Visibility="Collapsed" Background="#CC000000">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock Text="PAUSE" FontSize="40" FontWeight="Bold" Foreground="Yellow" HorizontalAlignment="Center" Margin="0,0,0,20"/>
                <Button Content="Reprendre" Click="ButReprendre_Click" Width="200" Height="40" Background="Green" Foreground="White" Margin="5"/>
                <Button Content="Quitter" Click="ButQuitterMenu_Click" Width="200" Height="40" Background="Red" Foreground="White" Margin="5"/>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>