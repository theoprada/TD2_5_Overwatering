<UserControl x:Class="Overwatering.UC_Jeu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             Height="450" Width="800"
             Focusable="True"
             Loaded="UC_Jeu_Loaded"
             KeyDown="UC_Jeu_KeyDown"
             KeyUp="UC_Jeu_KeyUp"
             PreviewKeyDown="UC_Jeu_PreviewKeyDown">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/Assets/ImagesMenu/JeuBackground.png" Stretch="UniformToFill"/>
        </Grid.Background>

        <Canvas x:Name="Canvas" Grid.RowSpan="2" Background="Transparent">
            <Image x:Name="ImgJoueur"
                   Width="64" Height="64"  
                   RenderOptions.BitmapScalingMode="NearestNeighbor"
                   Canvas.Left="470"       Canvas.Top="230"/>

            <Image x:Name="ImgClient"
                   Source="/Assets/ImagesJeu/persoClient.png"
                   Width="64" Height="64"
                   RenderOptions.BitmapScalingMode="NearestNeighbor"
                   Canvas.Left="400" Canvas.Top="30"
                   Visibility="Collapsed"/>
            <Border x:Name="BulleCommande"
                    Canvas.Left="470" Canvas.Top="30"
                    Background="White" BorderBrush="Black" BorderThickness="1"
                    CornerRadius="5" Padding="5"
                    Visibility="Collapsed">
                <StackPanel>
                    <TextBlock x:Name="TxtCommande" Text="Commande: " FontWeight="Bold"/>
                    <TextBlock x:Name="TxtFleurDemandee" Text="Fleur: "/>
                </StackPanel>
            </Border>

        </Canvas>

        <Canvas x:Name="CanvasJeu" Background="Transparent">
            <Image x:Name="ImgPerso"
                   Width="50" Height="60"  
                   Canvas.Left="475" Canvas.Top="200"
                   RenderOptions.BitmapScalingMode="NearestNeighbor"/>
        </Canvas>

        <Button x:Name="butPause" Content="⏸️"
                HorizontalAlignment="Right" VerticalAlignment="Top"
                Width="50" Height="50" Margin="0,10,10,0"
                Background="Transparent" BorderThickness="0" FontSize="25"
                Click="ButPause_Click" Cursor="Hand"/>

        <Grid x:Name="MenuPauseOverlay" Visibility="Collapsed" Background="#CC000000">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock Text="PAUSE" FontSize="40" FontWeight="Bold" Foreground="Yellow" HorizontalAlignment="Center" Margin="0,0,0,20"/>
                <Button Content="Reprendre" Click="ButReprendre_Click" Width="200" Height="40" Background="Green" Foreground="White" Margin="5"/>
                <Button Content="Quitter" Click="ButQuitterMenu_Click" Width="200" Height="40" Background="Red" Foreground="White" Margin="5"/>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>