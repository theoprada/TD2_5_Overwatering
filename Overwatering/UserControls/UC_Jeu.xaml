<UserControl x:Class="Overwatering.UC_Jeu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Overwatering"
             mc:Ignorable="d" 
             Height="450" Width="800">

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/Assets/ImagesMenu/JeuBackground.png" Stretch="UniformToFill"/>
        </Grid.Background>

        <Button x:Name="butPause"
                Grid.Row="0"
                Content="⏸️"
                HorizontalAlignment="Right"
                Width="101"
                Margin="0,21,673,387"
                Background="Transparent" Foreground="Yellow" BorderThickness="0"
                FontWeight="Bold"
                Click="ButPause_Click" FontSize="25"/>

        <StackPanel x:Name="MenuPauseOverlay"
                    Grid.RowSpan="2"  HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Width="300" Height="200"
                    Background="#88000000"  Visibility="Collapsed"  Orientation="Vertical">
            <TextBlock Text="JEU EN PAUSE"
                       FontSize="30"
                       FontWeight="Bold"
                       Foreground="#FFD700"
                       HorizontalAlignment="Center"
                       Margin="0,20,0,10"/>

            <Button x:Name="butReprendre"
                    Content="▶️ Reprendre"
                    Width="200" Height="40"
                    Background="#2ecc71" Foreground="White"
                    FontSize="18"
                    Click="ButReprendre_Click"/>

            <Button x:Name="butQuitterMenu"
                    Content="Quitter (Menu Principal)"
                    Width="200" Height="40"
                    Background="#e74c3c" Foreground="White"
                    FontSize="18"
                    Click="ButQuitterMenu_Click"/>

        </StackPanel>
    </Grid>
</UserControl>
