<UserControl x:Class="Overwatering.UC_Jeu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             Height="450" Width="800"
             Focusable="True"
             Loaded="UC_Jeu_Loaded"
             KeyUp="UC_Jeu_KeyUp"
             PreviewKeyDown="UC_Jeu_PreviewKeyDown">

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/Assets/ImagesMenu/JeuBackground.png" Stretch="UniformToFill"/>
        </Grid.Background>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10">
            <Image Source="/Assets/ImagesJeu/ImagesShop/coin.png" Width="30"/>
            <TextBlock x:Name="txtArgent" Text="0" Foreground="Gold" FontSize="20" FontWeight="Bold" Margin="5,0,20,0"/>

            <TextBlock Text="❤️" FontSize="20"/>
            <TextBlock x:Name="txtVies" Text="3" Foreground="Red" FontSize="20" FontWeight="Bold" Margin="5,0,0,0"/>
        </StackPanel>

        <Canvas x:Name="CanvasJeu" Background="Transparent">

            <Image x:Name="imgClient" Source="/Assets/ImagesJeu/persoClient.png" 
                   Width="60" Canvas.Left="450" Canvas.Top="50" Visibility="Collapsed"/>

            <Border x:Name="bulleCommande" Canvas.Left="500" Canvas.Top="20" 
                    Background="White" CornerRadius="10" Padding="5" Visibility="Collapsed">
                <StackPanel>
                    <TextBlock Text="Je veux :" FontWeight="Bold" FontSize="10"/>
                    <Image x:Name="imgCommandeFleur" Width="30" Height="30"/>
                </StackPanel>
            </Border>

            <UniformGrid x:Name="GrilleJardin" Rows="3" Columns="3" 
                         Canvas.Left="275" Canvas.Top="140" 
                         Width="180" Height="150">
            </UniformGrid>

            <StackPanel Orientation="Horizontal" Canvas.Left="580" Canvas.Top="280">
                <Border Width="40" Height="40" BorderBrush="Black" BorderThickness="1" Background="#88FFFFFF" Margin="2">
                    <Image x:Name="slotPanier0"/>
                </Border>
                <Border Width="40" Height="40" BorderBrush="Black" BorderThickness="1" Background="#88FFFFFF" Margin="2">
                    <Image x:Name="slotPanier1"/>
                </Border>
                <Border Width="40" Height="40" BorderBrush="Black" BorderThickness="1" Background="#88FFFFFF" Margin="2">
                    <Image x:Name="slotPanier2"/>
                </Border>
                <Border Width="40" Height="40" BorderBrush="Black" BorderThickness="1" Background="#88FFFFFF" Margin="2">
                    <Image x:Name="slotPanier3"/>
                </Border>
            </StackPanel>

            <Image x:Name="ImgPerso"
                   Width="50" Height="60"
                   Canvas.Left="375" Canvas.Top="200"
                   RenderOptions.BitmapScalingMode="NearestNeighbor"/>

        </Canvas>

        <Button x:Name="butPause" Content="⏸️" Focusable="False"
                HorizontalAlignment="Right" VerticalAlignment="Top"
                Width="50" Height="50" Margin="0,10,10,0"
                Background="Yellow" BorderBrush="Black" BorderThickness="1" FontSize="25" Foreground="Black"
                Click="ButPause_Click" Cursor="Hand"/>

        <Grid x:Name="MenuPauseOverlay" Visibility="Collapsed" Background="#CC000000">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock Text="PAUSE" FontSize="40" FontWeight="Bold" Foreground="Yellow" HorizontalAlignment="Center" Margin="0,0,0,20"/>
                <Button Content="Reprendre" Click="ButReprendre_Click" Width="200" Height="40" Background="Green" Foreground="White" Margin="5"/>
                <Button Content="Quitter" Click="ButQuitterMenu_Click" Width="200" Height="40" Background="Red" Foreground="White" Margin="5"/>
            </StackPanel>
        </Grid>

        <TextBlock x:Name="txtOutil" Text="Main vide" HorizontalAlignment="Center" VerticalAlignment="Bottom" 
                   Foreground="White" FontSize="20" FontWeight="Bold" Margin="0,0,0,10" Background="#AA000000" Padding="10"/>

    </Grid>
</UserControl>