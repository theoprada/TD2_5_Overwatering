<UserControl x:Class="Overwatering.UC_Parametres"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             Height="450" Width="800">

    <UserControl.Resources>
        <Style x:Key="BoutonCartoon" TargetType="Button">
            <Setter Property="FontFamily" Value="Kristen ITC"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Grid>
                            <Border Background="Black" CornerRadius="8" Margin="0,4,0,0" Opacity="0.5"/>
                            <Border x:Name="border" 
                                    Background="{TemplateBinding Background}" 
                                    BorderBrush="Black" 
                                    BorderThickness="3" 
                                    CornerRadius="8">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center">
                                    <ContentPresenter.Effect>
                                        <DropShadowEffect ShadowDepth="2" Color="Black" BlurRadius="2"/>
                                    </ContentPresenter.Effect>
                                </ContentPresenter>
                            </Border>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="White"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Margin" Value="0,2,0,0"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/Assets/ImagesMenu/backgroundMenu.jpg" Stretch="UniformToFill"/>
        </Grid.Background>

        <Border Background="#CC000000" CornerRadius="20" BorderBrush="White" BorderThickness="2"
                Width="500" Height="400" VerticalAlignment="Center" HorizontalAlignment="Center">

            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Margin="20">

                <TextBlock Text="PARAMÈTRES" 
                           FontFamily="Kristen ITC" 
                           FontSize="40" 
                           FontWeight="Bold" 
                           Foreground="#FFDEE022" 
                           HorizontalAlignment="Center" 
                           Margin="0,0,0,30">
                    <TextBlock.Effect>
                        <DropShadowEffect Color="Black" BlurRadius="10" ShadowDepth="5"/>
                    </TextBlock.Effect>
                </TextBlock>

                <TextBlock Text="VOLUME MUSIQUE" 
                           FontFamily="Kristen ITC" Foreground="LightBlue" FontSize="20" HorizontalAlignment="Center" Margin="0,0,0,5"/>

                <Slider x:Name="sliderVolume" 
                        Minimum="0" Maximum="100" Value="50" 
                        Width="300" 
                        Margin="0,0,0,30"
                        IsSnapToTickEnabled="True" TickFrequency="10"/>

                <TextBlock Text="TOUCHES" 
                           FontFamily="Kristen ITC" Foreground="LightBlue" FontSize="20" HorizontalAlignment="Center" Margin="0,0,0,5"/>

                <ComboBox x:Name="comboTouches" Width="300" Height="40" FontSize="18" FontFamily="Kristen ITC" Margin="0,0,0,40" SelectedIndex="0">
                    <ComboBoxItem Content="Flèches Directionnelles"/>
                    <ComboBoxItem Content="ZQSD (Clavier AZERTY)"/>
                </ComboBox>

                <Button Content="VALIDER &amp; RETOUR" 
                        Click="Retour_Click"
                        Style="{StaticResource BoutonCartoon}"
                        Background="LawnGreen" 
                        Width="280" 
                        Height="50"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>