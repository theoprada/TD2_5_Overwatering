<UserControl x:Class="Overwatering.UC_Credits"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             Height="450" Width="800">

    <UserControl.Resources>
        <Style x:Key="BoutonCartoon" TargetType="Button">
            <Setter Property="FontFamily" Value="Kristen ITC"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Grid>
                            <Border Background="Black" CornerRadius="8" Margin="0,4,0,0" Opacity="0.5"/>
                            <Border x:Name="border" 
                            Background="{TemplateBinding Background}" 
                            BorderBrush="Black" 
                            BorderThickness="3" 
                            CornerRadius="8">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center">
                                    <ContentPresenter.Effect>
                                        <DropShadowEffect ShadowDepth="2" Color="Black" BlurRadius="2"/>
                                    </ContentPresenter.Effect>
                                </ContentPresenter>
                            </Border>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="White"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Margin" Value="0,2,0,0"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/Assets/ImagesMenu/backgroundMenu.jpg" Stretch="UniformToFill"/>
        </Grid.Background>

        <Border Background="#CC000000" CornerRadius="20" Margin="50,20,50,20" BorderBrush="White" BorderThickness="2">
            <Grid Background="Black">
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                    <TextBlock Text="CRÉDITS" Foreground="#FFDEE022" FontSize="32" HorizontalAlignment="Center" Margin="0,0,0,20" FontWeight="Bold" FontFamily="Kristen ITC"/>


                    <TextBlock Text="Développé par :" Foreground="White" FontSize="18" HorizontalAlignment="Center"/>
                    <TextBlock Text="T.PRADA &amp; K.TOUATI" Foreground="#7FFFD4" FontSize="22" HorizontalAlignment="Center" Margin="0,5,0,20" FontWeight="Bold"/>
                    <TextBlock Text="Cadre de la SAE 1.01 / 1.02" Foreground="Gray" FontSize="14" HorizontalAlignment="Center" Margin="0,0,0,30"/>

                    <Button Grid.Row="2" 
                    Content="RETOUR AU MENU" 
                    Click="butRetour_Click"
                    Style="{StaticResource BoutonCartoon}"
                    Background="Blue" 
                    Width="250" 
                    Height="45"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>