<UserControl x:Class="Overwatering.UserControls.UC_Credit"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Overwatering.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/Assets/ImagesMenu/backgroundMenu.jpg"/>
        </Grid.Background>

        <Button x:Name="butRetourCredit" 
        Content="Retour au Menu"
        HorizontalAlignment="Center"
        Padding="15,5"
        FontSize="16" 
        Foreground="#FFDEE022" 
        Cursor="Hand"
        Margin="0,330,0,40">
            <Button.BorderBrush>
                <ImageBrush/>
            </Button.BorderBrush>
            <Button.Background>
                <ImageBrush/>
            </Button.Background>
        </Button>

    </Grid>
</UserControl>
