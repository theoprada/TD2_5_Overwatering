<UserControl x:Class="Overwatering.UserControls.UC_Credit"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Overwatering.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/Assets/ImagesMenu/backgroundMenu.jpg"/>
        </Grid.Background>

        <TextBlock Text="Théo &amp; Khalis  - Annecy &#x0a;&#x0a;Creative Director    Théo &amp; Khalis&#x0a;&#x0a;Production Director    Théo &amp; Khalis&#x0a;&#x0a;Art Director    Théo &amp; Khalis" 
                   TextAlignment="Center" FontSize="24" FontWeight="Bold" Foreground="#FFDEE022" HorizontalAlignment="Center" Width="440" Margin="0,47,0,122" FontFamily="Kristen ITC">
            <TextBlock.Effect>
                <DropShadowEffect ShadowDepth="3" Color="Black" Opacity="0.5" BlurRadius="5"/>
            </TextBlock.Effect>
        </TextBlock>

        <Button x:Name="butRetourCredit" Background="Transparent"
        Content="Retour au Menu"
        HorizontalAlignment="Center"
        Padding="15,5"
        FontSize="25" 
        Foreground="#FFDEE022" 
        Cursor="Hand"
        Margin="0,333,0,40">
            <Button.Effect>
                <DropShadowEffect ShadowDepth="3" Color="Black" Opacity="0.5" BlurRadius="5"/>
            </Button.Effect>
        </Button>

    </Grid>
</UserControl>
