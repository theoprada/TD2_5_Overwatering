<UserControl x:Class="Overwatering.UC_Regles"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Overwatering"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/Assets/ImagesMenu/backgroundMenu.jpg"/>
        </Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Règles du Jeu : 'Overwatering'" 
                   Grid.Row="0"
                   Foreground="#FFDEE022" 
                   FontSize="32" 
                   FontWeight="Bold" 
                   Margin="0,0,0,20" 
                   HorizontalAlignment="Center"/>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Orientation="Vertical">

                <TextBlock Text="But du Jeu :" 
                           Foreground="#7FFFD4" 
                           FontSize="20" 
                           FontWeight="SemiBold" 
                           Margin="20,0,0,10"/>

                <TextBlock Text=" Vous êtes une fleuriste qui doit remplir des commandes, pour préparer ces commandes vous devez plantez les graines adéquat " 
                           Foreground="#FFDEE022" 
                           TextWrapping="Wrap" 
                           Margin="30,0,0,25"/>

                <TextBlock Text="Commandes :" 
                           Foreground="#7FFFD4" 
                           FontSize="20" 
                           FontWeight="SemiBold" 
                           Margin="20,0,0,10"/>

                <Grid Margin="10,0,0,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Déplacement" FontWeight="Bold" Foreground="#FFDEE022" Margin="0,5"/>
                    <TextBlock Grid.Row="0" Grid.Column="1" Text="ZQSD" Foreground="#FFDEE022" Margin="15,5,0,5"/>

                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Commandes" FontWeight="Bold" Foreground="#FFDEE022" Margin="0,5"/>
                    <TextBlock Grid.Row="1" Grid.Column="1" Text="Arroser" Foreground="#FFDEE022" Margin="15,5,0,5"/>

                    <TextBlock Grid.Row="2" Grid.Column="0" Text="Échap" FontWeight="Bold" Foreground="#FFDEE022" Margin="0,5"/>
                    <TextBlock Grid.Row="2" Grid.Column="1" Text="Pause / Menu" Foreground="#FFDEE022" Margin="15,5,0,5"/>
                </Grid>

            </StackPanel>
        </ScrollViewer>

        <Button x:Name="butRetour" 
                Content="Retour au Menu" 
                Grid.Row="2"
                HorizontalAlignment="Center"
                Padding="15,5"
                FontSize="16" 
                Foreground="#FFDEE022" 
                Cursor="Hand"
                Margin="0,5,0,15">
            <Button.BorderBrush>
                <ImageBrush/>
            </Button.BorderBrush>
            <Button.Background>
                <ImageBrush/>
            </Button.Background>
        </Button>

    </Grid>
</UserControl>
