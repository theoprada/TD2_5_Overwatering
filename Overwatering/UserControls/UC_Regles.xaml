<UserControl x:Class="Overwatering.UC_Regles"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/Assets/ImagesMenu/backgroundMenu.jpg" Stretch="UniformToFill"/>
        </Grid.Background>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" Grid.Column="0" Text="Déplacement" FontWeight="Bold" Foreground="#FFDEE022" Margin="0,5"/>
            <TextBlock Grid.Row="0" Grid.Column="1" Text="ZQSD" Foreground="#FFDEE022" Margin="15,5,0,5"/>

            <TextBlock Grid.Row="1" Grid.Column="0" Text="Commandes" FontWeight="Bold" Foreground="#FFDEE022" Margin="0,5"/>
            <TextBlock Grid.Row="1" Grid.Column="1" Text="Arroser" Foreground="#FFDEE022" Margin="15,5,0,5"/>

            <TextBlock Text="L'ARROSAGE" FontFamily="Kristen ITC" Foreground="LightBlue" FontSize="22" Margin="0,0,0,5"/>
            <TextBlock Text="Attention à l'équilibre ! Si vous arrosez trop, la plante se noie et si pas assez, elle fane." 
                    Foreground="White" FontSize="16" TextWrapping="Wrap" Margin="0,0,0,20"/>

        </Grid>
        <Button x:Name="butRetour" Click="butRetour_Click" Background="Transparent" Content="Retour au Menu" HorizontalAlignment="Center"
        Padding="15,5" FontSize="25" Foreground="#FFDEE022" Cursor="Hand" Margin="0,333,0,40" BorderThickness="0" FontFamily="Kristen ITC">
            <Button.Effect>
                <DropShadowEffect ShadowDepth="3" Color="Black" Opacity="0.5" BlurRadius="5"/>
            </Button.Effect>
        </Button>


    </Grid>
</UserControl>